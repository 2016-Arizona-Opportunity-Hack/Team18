<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('header'); %>
    <title>App | Home</title>
    <script type="text/javascript" src="javascripts/home.js"></script>
  </head>
  <%- include('navbar'); %>
  <body class="container-fluid">

    <div class="row">
      <div class="donationForm-container col-xs-6 col-md-offset-3">
        <div class="panel-group">
          <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Donator's Information</h4>
            </div>
            <div class="panel-body">
              <form id="create_event_form">
                <div class = "row">
                  <div class="col-xs-6">
                    <input type="text" class="form-control" name="first_name" placeholder="First Name"/>
                  </div>
                  <div class="col-xs-6">
                    <input type="text" class="form-control" name="last_name" placeholder="Last Name"/>
                  </div>
                </div>
                <div class = "row">
                  <div class="col-xs-6">
                    <input type="text" class="form-control" name="email" placeholder="Email Address"/>
                  </div>
                  <div class="col-xs-6">
                    <input type="number" step ="0.01" min="0" class="form-control" name="payment" placeholder="Payment Amount"/>
                  </div>
                </div>
                <div class = "row"
                  <div class="col-xs-12">
                    <div class ="text-right" >
                      <button type="button" class="btn btn-primary" id="donationSubmit-btn">Submit</button>
                    </div>
                  </div
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <%- include('footer'); %>
</html>
