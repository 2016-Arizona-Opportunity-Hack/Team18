<!DOCTYPE html>
<head>
  <%- include('header'); %>
  <title>NAMI-VOS</title>
  <script type="text/javascript" src="javascripts/login.js"></script>
</head>
<body onload="setup();">
  <div class="container">
    <div id="login_container" class="container">
      <div class="row">
        <div class="col-xs-offset-4 col-xs-4">
          <img id="login-img" class="center-block" src="/images/nami_image.png" alt="NAMI-VOS">
        </div>
      </div>
      <div class="row">
        <h1 class="basic-coloring text-center">Admin Login</h1>
      </div>
      <div class="row">
        <div id="login_form" class="col-xs-offset-4 col-xs-4">
          <div class="form-group">
            <input type="text" class="basic-coloring form-control" id="email" name="loginEmail" placeholder="Email" required>
          </div>
          <div class="form-group">
            <input type="password" class="basic-coloring form-control" id="password" name="password" placeholder="Password" required>
          </div>
          <button id="login_button" class="btn button-default col-xs-12" onclick="login();"><b>Login</b></button>
          <label id="failed-login" class="col-xs-12 wrong-input text-center hidden"><b>Incorrect Admin Email or Password</b></label>
        </div>
      </div>
    </div>
  </div>
  <%- include('footer'); %>
</body>
