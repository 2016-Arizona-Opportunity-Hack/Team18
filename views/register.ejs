<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('header'); %>
    <title>NAMI-VOS| Register</title>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <link rel="stylesheet" href="stylesheets/bootstrap-select.min.css">
    <script type="text/javascript" src="javascripts/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="javascripts/register.js"></script>
  </head>
  <body onload="setup();" class="container-fluid ">
    <div class="row">
      <div class="donationForm-container col-xs-6 col-md-offset-3">
        <div class="panel-group">
          <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Welcome Participants</h4>
            </div>
            <div class="panel-body">
              <div>
                <div class="row">
                  <div class="row">
                    <div class="col-md-6 col-xs-12">
                      <label for="first_name">First Name:</label>
                      <input class="form-control" type="text" maxlength="63" name="first_name" id="first_name" required/>
                    </div>
                    <div class="col-md-6 col-xs-12">
                      <label for="first_name">Last Name:</label>
                      <input class="form-control" type="text" maxlength="63" name="last_name" id="last_name" required/>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 col-xs-12">
                      <label for="phone">Phone:</label>
                      <input class="form-control" type="text" maxlength="14" name="phone" id="phone" required/>
                    </div>
                    <div class="col-md-6 col-xs-12">
                      <label for="email">Email:</label>
                      <input class="form-control" type="text" maxlength="127" name="email" id="email" required/>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 col-xs-12">
                      <label for="address">Address:</label>
                      <input class="form-control" type="text" maxlength="255" name="address" id="address" required/>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 col-xs-12">
                      <label for="company">Company:</label>
                      <input class="form-control" type="text" maxlength="255" name="company" id="company" required/>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-6">
                      <div class="basic-coloring">Communication Preference</div>
                      <div class="basic-coloring">
                        <select id="preference" class="selectpicker basic-coloring" required>
                          <option value=>- Select One -</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                      <div class="basic-coloring">Engagement Interest</div>
                      <div class="basic-coloring">
                        <select id="interest" class="selectpicker basic-coloring" required>
                          <option value=>- Select One -</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="g-recaptcha" data-sitekey="6LeFMQgUAAAAAEbf17SKD77cfszpHVh1uh_FTbZP"></div>
                <div class="row">
                  <div class="col-xs-12">
                    <div class ="text-right" >
                      <button type="button" class="btn btn-primary" onclick="register();" id="register-btn">Register</button>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <%- include('footer'); %>
</html>
