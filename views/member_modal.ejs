          <tbody id="member-modal-table-body">
            <tr>
              <td class="text-left basic-coloring">First Name</td>
              <td class="text-right basic-coloring">
                <input id="member-modal-table-first-name" type="text" class="basic-coloring form-control text-right" placeholder="First Name" required>
              </td>
            </tr>
            <tr>
              <td class="text-left basic-coloring">Last Name</td>
              <td class="text-right basic-coloring">
                <input id="member-modal-table-last-name" type="text" class="basic-coloring form-control text-right" placeholder="Last Name" required>
